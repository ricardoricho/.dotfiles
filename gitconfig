[core]
  autocrlf = input
  safecrlf = false

[alias]
  cms = commit -m
  h   = log --pretty=format:'%Creset%C(red bold)[%ad] %C(yellow bold)%h %Creset%C(magenta bold)%d %Creset%s %C(green bold)(%an)%Creset' --graph --abbrev-commit --date=short
  ha  = log --pretty=format:'%Creset%C(red bold)[%ad] %C(green bold)%h %Creset%C(magenta bold)%d %Creset%s %C(green bold)(%an)%Creset' --graph --all --abbrev-commit --date=short
  co = checkout
  ff = merge --ff-only
[color]
  ui = true
